<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/hAllContactsFragment">

    <fragment
        android:id="@+id/hAllContactsFragment"
        android:name="com.hashim.mapswithgeofencing.ui.contacts.DisplayContactsFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_display_contacts">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/hDisplayContactsFragment" />
    </fragment>
    <fragment
        android:id="@+id/hDisplayContactsFragment"
        android:name="com.hashim.mapswithgeofencing.ui.contacts.AllContactsFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_all_contacts">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/hAllContactsFragment" />
    </fragment>
</navigation>